# Production Environment for Docker Deployment
# Copy this file and update with your Sevalla credentials

# Database Configuration (Update with Sevalla DB details)
DB_HOST=database
DB_USER=soundvault_user
DB_PASSWORD=secure_password_change_this
DB_NAME=soundvault
DB_PORT=3306
DB_ROOT_PASSWORD=root_password_change_this

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration (Generate secure secret)
JWT_SECRET=your-super-secure-jwt-secret-for-production-change-this
JWT_EXPIRES_IN=7d

# CORS Configuration (Update with your Sevalla domain)
CORS_ORIGIN=https://your-domain.sevalla.com
FRONTEND_URL=https://your-domain.sevalla.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# SSL/Security
TRUST_PROXY=true
