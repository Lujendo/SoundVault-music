# Production Environment Configuration for Sevalla

# Database Configuration (Sevalla MariaDB)
DB_HOST=your-sevalla-db-host
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=soundvault
DB_PORT=3306

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production
JWT_EXPIRES_IN=7d

# CORS Configuration (Sevalla Frontend URL)
CORS_ORIGIN=https://your-frontend-domain.sevalla.com
FRONTEND_URL=https://your-frontend-domain.sevalla.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# SSL/Security (for production)
TRUST_PROXY=true
